{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
     "rootDir": "src",
    "outDir": "dist",
    "incremental": true,
    "declaration": true,
    "composite": true,
    "module": "NodeNext",               // to match your monorepo setup
    "moduleResolution": "NodeNext",     // to avoid ts/esm mismatch
    "target": "ES2022",                 // or "ESNext"
    "lib": ["ES2022"],
    "esModuleInterop": true
  },
  "include": ["src"]
}
